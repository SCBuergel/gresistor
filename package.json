{
  "name": "resilient-backup",
  "version": "0.1.0",
  "private": true,
  "description": "A resilient backup system for wallet profile data",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:ui": "pnpm --filter @resilient-backup/library build && pnpm --filter @resilient-backup/ui build",
    "deploy": "pnpm run build:ui",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
} 