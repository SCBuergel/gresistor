{
  "name": "@gresistor/ui",
  "version": "0.1.0",
  "description": "React UI for gresistor - Gnosis Resilient Storage",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:metamask": "playwright test --config=playwright.metamask.config.ts",
    "test:metamask:debug": "DEBUG=true playwright test --config=playwright.metamask.config.ts",
    "test:app-only": "APP_ONLY=true playwright test",
    "test:app-only:debug": "APP_ONLY=true DEBUG=true playwright test"
  },
  "dependencies": {
    "@gresistor/library": "workspace:*",
    "@walletconnect/ethereum-provider": "^2.21.4",
    "ethers": "^6.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "siwe": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@tenkeylabs/dappwright": "^2.11.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "dotenv": "^16.3.1"
  }
}